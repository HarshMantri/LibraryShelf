<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_app_name"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aladin"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_img" />

    <Button
        android:id="@+id/main_all_books_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="See All Books "
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_app_name" />

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_cur_reading_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Currently Reading Books"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/main_all_books_btn"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/main_all_books_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_all_books_btn" />

    <Button
        android:id="@+id/main_already_read_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Already Read Books"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/main_cur_reading_btn"
        app:layout_constraintStart_toStartOf="@+id/main_cur_reading_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_cur_reading_btn" />

    <Button
        android:id="@+id/main_wishlist_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Wishlist"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/main_already_read_btn"
        app:layout_constraintStart_toStartOf="@+id/main_already_read_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_already_read_btn" />

    <Button
        android:id="@+id/main_favourites_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="See Your Favourites"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/main_wishlist_btn"
        app:layout_constraintStart_toStartOf="@+id/main_wishlist_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_wishlist_btn" />

    <TextView
        android:id="@+id/main_credit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made by Harsh Mantri"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_abt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="About"
        app:layout_constraintEnd_toEndOf="@+id/main_favourites_btn"
        app:layout_constraintStart_toStartOf="@+id/main_favourites_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_favourites_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>