<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wizardSphinx.libraryshelf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FavouritesActivity" android:label="@string/activity_fav"></activity>
        <activity android:name=".WishlistActivity" android:label="@string/activity_wishlist"/>
        <activity android:name=".CurrentlyReadingActivity" android:label="@string/activity_cur_reading"/>
        <activity android:name=".AlreadyReadBooksActivity" android:label="@string/activity_already_read"/>
        <activity android:name=".BookDetailActivity" android:label="@string/activity_book_details"/>
        <activity android:name=".AllBooksActivity" android:label="@string/activity_all_books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>